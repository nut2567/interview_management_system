generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User_info {
  id        Int         @id @default(autoincrement())
  Name      String
  createdAt DateTime    @default(now())
  age       Float
  email     String      @unique
  image     String
  phone     String
  role      String
  password  String
  Interview Interview[]
  Comment   Comment[]
}

model Interview {
  id        Int       @id @default(autoincrement())
  Title     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  status    String
  detail    String
  image     String?
  user_id   Int
  active    String
  Comment   Comment[]
  History   History[]
  user      User_info @relation(fields: [user_id], references: [id])
}

model Comment {
  id          Int       @id @default(autoincrement())
  content     String // เพิ่มข้อความความคิดเห็น
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
  status      String
  user_id     Int
  InterviewId Int
  user        User_info @relation(fields: [user_id], references: [id])
  Interview   Interview @relation(fields: [InterviewId], references: [id])
}

model History {
  id          Int       @id @default(autoincrement())
  status      String
  detail      String
  Title       String
  createdAt   DateTime  @default(now())
  InterviewId Int
  Interview   Interview @relation(fields: [InterviewId], references: [id])
}
